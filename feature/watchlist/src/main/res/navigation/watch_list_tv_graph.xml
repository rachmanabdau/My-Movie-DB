<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watch_list_tv_graph"
    app:startDestination="@id/watchListTVFragment">

    <fragment
        android:id="@+id/watchListTVFragment"
        android:name="com.example.mymoviddb.feature.watchlist.tv.WatchListTVFragment"
        android:label="@string/tv_watch_list_menu"
        tools:layout="@layout/fragment_watch_list_tv">
        <action
            android:id="@+id/action_watchListTVFragment_to_detail_graph"
            app:destination="@id/detail_graph">
            <argument
                android:name="showItem"
                app:argType="com.example.mymoviddb.core.model.ShowResult" />
        </action>
    </fragment>
    <include app:graph="@navigation/detail_graph" />
</navigation>