<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/authenticationFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mymoviddb.home.HomeFragment"
        android:label="@string/home_label"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_categoryGraph"
            app:destination="@id/category_graph">
            <argument
                android:name="title"
                app:argType="integer" />
            <argument
                android:name="categoryId"
                app:argType="com.example.mymoviddb.core.ShowCategoryIndex" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_detail_graph"
            app:destination="@id/detail_graph">
            <argument
                android:name="showItem"
                app:argType="com.example.mymoviddb.core.model.ShowResult" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.example.mymoviddb.authentication.guest.AuthenticationFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_authentication">
        <action
            android:id="@+id/action_authenticationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authenticationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mymoviddb.authentication.user.UserFragment"
        android:label="@string/action_login"
        tools:layout="@layout/fragment_user" />
    <include app:graph="@navigation/detail_graph" />
    <include app:graph="@navigation/favourite_movie_graph" />
    <include app:graph="@navigation/favourite_tv_graph" />
    <include app:graph="@navigation/watch_list_movie_graph" />
    <include app:graph="@navigation/watch_list_tv_graph" />
    <include app:graph="@navigation/search_graph" />
    <include app:graph="@navigation/category_graph" />
</navigation>
